/* 头像 */
.user-section {
  width: 100%;
  padding-top: 28rpx;
  padding-bottom: 20rpx;
  color: #fff;
  background: #e1648c;
  font-size: 28rpx;
  position: relative;
}
.user-info {
  display: flex;
  justify-content: start;
  align-items: flex-start;
}

.photo_wrap {
  width: 135rpx;
  height: 135rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
  margin-left: 15px;
}
.photo_wrap .photo {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.nickname {
  padding-left: 28rpx;
  font-size: 36rpx;
  margin-top:28rpx;
}
.hyka {
  padding-left:28rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}
.hyka .iconfont {
  font-size: 27px;
}

.number {
 position: absolute;
 left:188rpx;
 top:108rpx;
}
.page-bottom {
  padding: 30rpx;
  display: flex;
  justify-content:space-around;
}
.bottom {
padding: 0px;
width:298rpx;
height:75rpx;
line-height:75rpx;
font-size:30rpx;
background:#d2235a;
color: #fff
}

/* 每日签到 */
.wode_item_wrap {
  background-color: #fff;
  font-size: 28rpx;
  margin-top: 10px;
  border-top: 1px solid #e5e5e5;
}

.wode_item {
  height: 88rpx;
  border-bottom: 1px solid #e5e5e5;
  padding: 0 10px;
  line-height: 88rpx;
  position: relative;
  color: rgb(102, 102, 102);
}

.arrow_wrap {
  width: 40px;
  height: 88rpx;
  text-align: center;
  position: absolute;
  right: 0;
  top: 0;
}

.wode_out {
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background-color: #fff;
  margin-top: 10px;
  font-size:28rpx;
  border-bottom: 1px solid #e5e5e5;
  border-top: 1px solid #e5e5e5;
}

/* 字体图标 */
.user-article {
  background-color: rgb(255, 255, 255);
}

.user-order {
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  padding-left: 20rpx;
  border-bottom: 1rpx solid rgb(216, 216, 216);
  box-sizing: border-box;
  border-top: 1rpx solid rgb(216, 216, 216);
}
.order-all {
  width: 630rpx;
  font-size: 28rpx;
  color: rgb(102, 102, 102);
}
.order-look {
  font-size: 24rpx;
  color: rgb(153, 153, 153);
}

/* 积分列表 */
.order-class {
  width: 100%;
  display: flex;  
 justify-content: space-between;
 align-items: center;
}
.item-order {
  width: 25%;
  height: 155rpx;
  font-size: 28rpx;
  text-align: center;
  color: rgb(153, 153, 153);
}
.item--order-text {
  line-height: 34rpx;
  font-size: 30rpx;
}

.clearbtn {
  margin: 50rpx auto;
  width:465rpx;
  height: 75rpx; 
  line-height: 75rpx;
  font-size: 30rpx;
  background: #e1648c;
  color: #fff;
}
