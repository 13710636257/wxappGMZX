/* pages/user/storecard/storecard.wxss */
@import "../../../wxParse/wxParse.wxss"; 
.login-page {
  padding-top:40rpx;
}
.page-content {
  margin: 0 auto;
  width: 95%;
  padding: 10rpx 0 60rpx 0;
  background: #fff;
}
.page-title {
  margin: 0 auto;
  width: 65%;
  line-height: 75rpx;
  text-align: center;
  font-size: 42rpx;
  margin-top: 20rpx;
 border-radius: 8rpx;	
}

.section {
  padding: 20rpx 35rpx 0 35rpx;
}

.section input {
  height: 80rpx;
  font-size: 35rpx;
  border-bottom: 1rpx solid #eee;
}
.num-section {
  margin: 0 auto;
  width: 90%;
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}
.time-section {
  line-height: 90rpx;
}

.phone-number {
  width: 65%;
}
.phone-btn {
  width: 40%;
  height: 55rpx;
  line-height: 55rpx;
  font-size: 28rpx;
  background: #e1648c;
  margin-left: 10rpx;
  color: #fff;
  padding: 0;
}

.info-btn{
  margin: 0 auto;
  width: 87%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.info-btn .btn{
  display: inline-block;
  width: 255rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  margin-top: 35rpx;
  border-radius: 4rpx;	
  font-size: 16px; 
 }
.info-btn .btn-submit{background: #f62566; color: #FFFFFF;}
.info-btn .btn-activety{background: #c6c03b;color: #0e0223;}