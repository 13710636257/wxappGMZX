<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
    <view class="page__bd">
        <view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">{{showTopTips}}</view>
		<form bindsubmit="goDetail" > 
			<view class="weui-cells weui-cells_after-title font-18">
				<view class="weui-cell weui-cell_input">
					<view class="weui-cell__bd">
						<input class="weui-input" type="password" name="password" placeholder="请输入旧密码" required/>
					</view>
				</view>            
				<view class="weui-cell weui-cell_input">
					<view class="weui-cell__bd">
						<input class="weui-input" type="password" name="password1" placeholder="请输入新密码" required/>
					</view>
				</view>            
				<view class="weui-cell weui-cell_input">
					<view class="weui-cell__bd">
						<input class="weui-input" type="password" name="password2" placeholder="请再次输入新密码" required/>
					</view>
				</view>
			</view>
			<view class="weui-btn-area">
				<button class="weui-btn" type="primary" form-type="submit">确定</button>
			</view>
        </form> 
    </view>
</view>