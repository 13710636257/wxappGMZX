.page {
 background: #F7F7F7;
}
.header {
  width: 100%;
  height: 85rpx;
  background: #fff;
}

.header .section {
  float: left;
  width: 32.6%;
  height: 100%;
  text-align: center;
  font-size: 32rpx;
  border: 1rpx solid #CCC;

}
.search {
  display: flex;
  justify-content: center;
  align-items: center;
  border: none;
  background: #fff;
  border-radius:0rpx
}

.list-group {
  margin-top: 20rpx;
  background: #fff;
   border: 1rpx solid #CCC;
  border-radius: 8rpx;
}
.list{
  padding: 20rpx 25rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size:28rpx;
}
.list-group-top {
  border-bottom: 1rpx solid #CCC;
 
}
 .wfk {
  padding: 0 10rpx;
  color: #fff;
  font-size: 28rpx;
}

.price {
  margin-right: 25rpx;
  color: #F25A88;
}

.fr {
  width: 38%;
  display: flex;
  justify-content: space-around;
}
.fr button {
  padding: 0;
  font-size:24rpx;
  width: 75rpx;
 
  text-align: center;
  line-height: 45rpx;
}

.next-page {
  width: 100%;
  margin: 20px 0;
  padding: 10rpx 0;
  text-align: center;
  background: #fff;
  font-size: 32rpx;
}

.show-popup{
  position: fixed;
  top: 0;
  left: 0;
  width:100%;
  height: 100%;
  z-index: 4;
}
.popup-mask{
  position: fixed;
  top: 0;
  left: 0;
  width:100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 5;
}
.popup-contents{
  padding-top: 50rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  width:100%;
  background-color: #fff;
  z-index: 6;
}
.pop-goods-info{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1px solid #eee;
}
.info-left {
  width: 60%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.pop-img-box{
  width: 120rpx;
  height: 120rpx;
  margin-right: 26rpx;
}
.pop-img-box .goods-thumbnail{
  width: 120rpx;
  height: 120rpx;
}
.pop-goods-title{
  width: 484rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size:26rpx;
  color:#000000;
}
.pop-goods-price{
  font-size:32rpx;
  color:#F25A88;
  margin-top:10rpx; 
}
.pop-goods-close{
  width: 40rpx;
  height: 40rpx;
  flex: 1;
  align-self: flex-start;
  background:url("https://cdn.gmzx.com/images/weixin/wxApp/popup-close.png") no-repeat center center;
  background-size: 40rpx auto;
  position: absolute;
  right: 15rpx;
  top:10rpx;
}
.checkmore {
  width: 145rpx;
  line-height: 55rpx;
  text-align: center;
  font-size: 26rpx;
  border-radius: 8rpx;
  background: #F25A88;
  color: #fff;
}

.btn-danger {
   background: #d9544f;
}
.btn-warning {
  background: #f1ac4d;
}
.btn-info {
  background: #5bc0de;
}
.btn-success {
  background: #5bb85d;
}
.btn-primary {
  background: #418bca;
}